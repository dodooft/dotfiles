[bar/laptop]
bottom = false

width = 100%
height = 25

;offset_x = 0
;offset_y = 0

background = #FF2F343F
foreground = #fafafa

spacing = 1
padding_left = 2
padding_right = 0
module_margin_left = 0
module_margin_right = 0

font-0 = sans:size=8.5;0
font-1 = FontAwesome:size=10;0

modules-left = bspwm
modules-center = clock
modules-right = battery volume power

[module/clock]
type = internal/date
date = %b %d %H:%M
;format-background = #493
format-underline = #fff
#format-overline = #7a6
format-padding = 3

[module/volume]
type = internal/volume
;speaker_mixer = Speaker
;headphone_mixer = Headphone
;headphone_control_numid = 4

#format-volume-background = #933484
#format-volume-underline = #9d6294
#format-volume-overline = #9d6294
format-volume-padding = 3
format-muted-background = #F48F97
format-muted-underline = #F48F97
format-muted-overline = #F48F97
format-muted-padding = 3
format-volume = <ramp-volume> <label-volume>

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-volume = %percentage%
label-volume-foreground = #ffffff
label-muted =  Mute

[module/bspwm]
type = internal/bspwm
pin-workspaces = false

label-focused = 
label-focused-padding = 1
label-occupied = 
label-occupied-padding = 1
label-empty = 
label-empty-padding = 1

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full_at = 95

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC0
format-charging = <animation-charging>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-discharging-underline = #F48F97
; Available tokens:
;   %percentage% (default)
label-charging = %percentage%
label-discharging = %percentage%
label-full = 

format-discharging-padding = 3
format-charging-padding = 3

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate_ms = 5000

[module/power]
type = custom/menu
label-open = 
label-close = 
format-padding = 3
label-close-backgroun = #FFF
;content-background = #FFF
;click-left = gnome-terminal
menu-0-0 = ▕▏Suspend▕
menu-0-2 = ▏Power▕
menu-0-1 = ▏Restart▕
;menu-0-0-foreground = #fba922
;menu-0-0background = #222
menu-0-0-exec = systemctl suspend
menu-0-1-exec = systemctl reboot
menu-0-2-exec = systemctl poweroff
;menu-1-0 = <output>

[module/power_old]
type = custom/text
content = 
content-padding = 3
;content-background = #FFF
click-left = oblogout.sh


[module/mpris]
type = custom/script
exec = $HOME/.bin/mpris.sh
interval = 1
;tail = true
format-background = #25A2A6
format-padding = 3
format= <label>
click-left = playerctl play-pause
click-right = $HOME/.bin/mpris.sh -t
scroll-up = playerctl next
scroll-down = playerctl previous

[module/network]
type = custom/script
exec = $HOME/.bin/network.sh
interval = 1
;tail = true
;format-background = #25A2A6
format-padding = 3
format= <label>
click-left = termite -e nmtui &

