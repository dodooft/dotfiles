[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/home]
;monitor = HDMI1
bottom = false

width = 100%
height = 25


; offset_x = 10
;offset_y = 0

background = #FF2F343F
foreground = #fafafa
;linecolor = #ff0000

spacing = 1
padding_left = 2
padding_right = 0
module_margin_left = 0
module_margin_right = 0

font-0 = sans:size=8.5;0
font-1 = FontAwesome:size=10;0

modules-left = bspwm
modules-center = clock
modules-right = mpris network volume power

